{
  "compilerOptions": {
    "allowJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es2019", "es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "es2021"
  },
  "include": ["packages/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/node_modules/**",
    "**/packages/zora-drops-utils/src/constants/typechain/**, packages/zora-drops-utils/src/constants/typechain/**/*.ts, packages/zora-drops-utils/src/constants/typechain/**/*.t.sol"
  ]
}
